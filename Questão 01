#include<stdio.h>

int main ()
{
int altura, i, estrela, aux, aux1, espaco;

estrela=1;

printf("n = ");
scanf ("%d", &altura);

espaco=altura;

for (i=1; i<=altura; i++)
{
    for(aux=espaco; aux>1; aux--)
    
        printf (" ");
    }

    for(aux1=estrela; aux1>=1; aux1--)
    {
        printf ("*");
    }

	estrela++;
	espaco--;
    printf ("\n");

	}
	
return 0;

}
